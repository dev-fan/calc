<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvLog"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llKeyboard"
        android:layout_weight="1"
        android:layout_gravity="bottom">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etExpression"
            android:digits="1234567890+-*/.()"
            android:textSize="@dimen/list_text_size"
            android:inputType="none"
            android:focusable="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/one"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn1"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/two"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn2"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/three"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn3"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/delete"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnDel"
                android:onClick="onClear"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/clear"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnClear"
                android:onClick="onClear"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/four"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn4"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/five"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn5"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/six"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn6"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/multi"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnMulti"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/div"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnDiv"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/seven"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn7"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/eight"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn8"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/nine"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn9"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/add"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnAdd"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/sub"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnSub"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/dot"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnDot"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/zero"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btn0"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/bracket_open"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnBracketOpen"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/bracket_close"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnBracketClose"
                android:onClick="onInput"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/btn_margin"
                android:text="@string/calc"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold"
                android:id="@+id/btnCalc"
                android:onClick="onCalc"
                android:background="@drawable/button_selector"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
